<Page
    x:Class="Monitoreo.Views.Page5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Monitoreo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">



    <Grid>


        <Grid.Background>
            <ImageBrush
                    ImageSource="/Icons/reportes.jpg" Stretch="Uniform" Opacity="0.3"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>



        <Grid Grid.Column="0">



            <StackPanel Width="360" HorizontalAlignment="Right" Margin="0,95,61,0" Background="#CCF4F3F3" Height="auto" VerticalAlignment="Top" >
                <GridViewHeaderItem Content="Planillas" VerticalAlignment="Top" Margin="0,10"/>
                
                <TextBlock TextWrapping="Wrap" Margin="10" Text="Calcula automaticamente todos los costos de planilla con un solo click"/>
                <ComboBox  Name="tipopla" Margin="10" Header="Formato" PlaceholderText="Selecione El formato de la planilla" HorizontalAlignment="Stretch" SelectionChanged="Tipopla_SelectionChanged">
                    <x:String>Mensual</x:String>
                    <x:String>Semanal</x:String>
                </ComboBox>

                <StackPanel Name="plasem" Height="0">

                    <CalendarDatePicker  Name="fchsem" Margin="10" IsDoubleTapEnabled="False" FirstDayOfWeek="Monday" Header="Selecione el Lunes de la semana a calcular"></CalendarDatePicker>

                </StackPanel>

                <StackPanel Name="plames" Height="0">


                    <DatePicker Name="fchplamen" Margin="10" Header="Escoja el mes y año de la planilla a generar" DayVisible="False"/>
                   

                </StackPanel>


                <TextBlock Name="probando"></TextBlock>
                <Button Name="genplanilla"  HorizontalAlignment="Stretch" Height="35" Margin="10,25" Background="ForestGreen" Content="Generar Planilla" Click="Genplanilla_Click" />
            </StackPanel>


        </Grid>




        <Grid Grid.Column="1">


            <ScrollViewer>
                <StackPanel Width="360" HorizontalAlignment="Left" Margin="61,95,0,0" Background="#CCF4F3F3" Height="auto" VerticalAlignment="Top">
                    <GridViewHeaderItem Content="Reportes" VerticalAlignment="Top" Margin="0,10"/>

                    <TextBlock TextWrapping="Wrap" Margin="10" Text="Vea el total de los Gastos Ingresados Diarios o Mensuales y guardelos en una Tabla de Excel"/>
                    <ComboBox Name="r" SelectionChanged="RangeValue" Margin="10" Header="Rango" PlaceholderText="Selecione Fecha de reporte" HorizontalAlignment="Stretch">
                        <x:String>Diario</x:String>
                        <x:String>Mensual</x:String>
                        <x:String>Anual</x:String>
                    </ComboBox>
                    <StackPanel Name="Calculo"  Margin="10" Height="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="360">
                        <ComboBox x:Name="mes" Width="295" Margin="10"  Header="Mes" Visibility="Collapsed" SelectionChanged="Mes_SelectionChanged">
                            <x:String>Enero</x:String>
                            <x:String>Febrero</x:String>
                            <x:String>Marzo</x:String>
                            <x:String>Abril</x:String>
                            <x:String>Mayo</x:String>
                            <x:String>Junio</x:String>
                            <x:String>Julio</x:String>
                            <x:String>Agosto</x:String>
                            <x:String>Septiembre</x:String>
                            <x:String>Octubre</x:String>
                            <x:String>Noviembre</x:String>
                            <x:String>Diciembre</x:String>
                        </ComboBox>
                        <DatePicker Name="año" Header="Año" Margin="10" DayVisible="False" MonthVisible="False" YearFormat="{}{year.full}" Width="295" Visibility="Collapsed"  />
                        <Button x:Name="calcular" Content="Calcular" Margin="10" Width="166" HorizontalAlignment="Center" Click="Calcular_Click" Visibility="Collapsed" Background="#334DC1FD" IsEnabled="False" />
                    </StackPanel>
                    <TextBox Name="Compras" Header="Total de Compras" Margin="10" IsEnabled="False"/>
                    <TextBox Name="Gastos" Header="Total de Gastos" Margin="10" IsEnabled="False"/>
                    <TextBox Name="Perdidas" Header="Total de Compras" Margin="10" IsEnabled="False"/>
                    <Button Name="ExcelButton" Click="CrearExcel" IsEnabled="False" HorizontalAlignment="Stretch" Height="35" Margin="10,25" Background="ForestGreen" Content="Guardar en Excel"/>
                </StackPanel>
            </ScrollViewer>



        </Grid>





    </Grid>
</Page>
