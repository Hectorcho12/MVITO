<Page
    x:Class="MVITO.Views.Page4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MVITO.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <Flyout x:ConnectionId='2' x:Name="FlyoutMss" Placement="Top" >

            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background" Value="Salmon"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>


            <StackPanel MaxWidth="350" MaxHeight="200" >
                <Image></Image>
                <TextBlock x:ConnectionId='3' TextWrapping="Wrap"  Name="mensaje"></TextBlock>

            </StackPanel>
        </Flyout>

    </Page.Resources>
    <Grid>

        <Pivot Title="Administracion de empleados" Margin="1">

            <PivotItem Header="Ingreso y modificacion de empleados">


                <Grid>
                    <Grid.Background>
                        <ImageBrush
                    ImageSource="/Icons/empleados.png" Stretch="None"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>




                    <Grid Grid.Column="0">

                        <ScrollViewer>
                            <StackPanel Width="360" Height="570" HorizontalAlignment="Center" Margin="0,41,0,0" Background="#CCF4F3F3" >

                                <GridViewHeaderItem Content="Registro de Empleados" VerticalAlignment="Top" Margin="0,10"/>
                                <TextBlock x:ConnectionId='35' Name="test"></TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="10" Text="Registro a cada uno de sus empleados para llevar un control total de su planilla. Esto incluye deducciones a empleados, pagos de horas extras e ingresos y egresos extras"/>
                                <TextBlock TextWrapping="Wrap" Margin="10" Text="Datos Generales" FontSize="15" HorizontalAlignment="Center"/>

                                <TextBox x:ConnectionId='36' Name="IDempleado" Margin="10,0" Header="Identificacion" PlaceholderText="Ingrese numero de identidad del empleado"                              MaxLength="15"                                 />
                                <TextBox x:ConnectionId='37' Name="nomempleado" Margin="10,0" Header="Nombre Completo" PlaceholderText="Ingrese el nombre del empleado" MaxLength="100"/>
                                <DatePicker x:ConnectionId='38' Name="nacempleado" Header="Fecha de nacimiento" Margin="10,0" Width="337"></DatePicker>
                                <ComboBox x:ConnectionId='39' Name="genempleado" Margin="10,0" Header="Genero" Width="337" PlaceholderText="Escoja el genero del empleado">
                                    <x:String>Masculino</x:String>
                                    <x:String>Femenino</x:String>
                                </ComboBox>
                                <DatePicker x:ConnectionId='40' Name="iniempleado" Header="Fecha de Inicio" Margin="10,0" Width="337"></DatePicker>
                                <TextBox x:ConnectionId='41' Name="domempleado" Margin="10,0" Header="Domicilio del empleado" PlaceholderText="Ingrese el domicilio del empleado" MaxLength="100"/>


                            </StackPanel>
                        </ScrollViewer>
                    </Grid>



                    <Grid Grid.Column="1">


                        <ScrollViewer>
                            <StackPanel Width="360" Height="560" HorizontalAlignment="Left" Margin="112,54,0,10" Background="#CCF4F3F3">
                                <TextBlock TextWrapping="Wrap" Margin="10" Text="Datos del puesto" FontSize="15" HorizontalAlignment="Center"/>

                                <TextBox x:ConnectionId='27' Name="Salarioempleado" Margin="10,3" Header="Salario" PlaceholderText="Ingrese el salario de su empleado"                                                                    MaxLength="7"/>





                                <TimePicker x:ConnectionId='28'  Name="cbxentrada" MinuteIncrement="0" Margin="10,3" ClockIdentifier="24HourClock" Header="Hora de entrada"                                                      />
                                <TimePicker x:ConnectionId='29' Name="Cbxsalida" MinuteIncrement="0" Margin="10,3"  ClockIdentifier="24HourClock" Header="Hora de Salida"                                                     />


                                <TextBox x:ConnectionId='30' Name="puestoempleado" Margin="10,3" Header="Puesto" PlaceholderText="Ingrese el puesto de trabajo del empleado" MaxLength="50"/>
                                <TextBox x:ConnectionId='31' Name="comentarioempleado" Margin="10,3" Header="Comentarios" PlaceholderText="Añada convenios o acuerdos con el empleado" MaxLength="100"/>

                                <DatePicker x:ConnectionId='32'  Name="durampleado" Header="Duracion del contrato" Margin="10,0"                                                       />
                                <TextBlock TextWrapping="Wrap" Margin="10,0" Text="Marque la casilla si la duracion del contrato sera indefinida" FontSize="15"></TextBlock>
                                <CheckBox x:ConnectionId='33' Name="Indefinido" Margin="10,0" Content="Contrato Indefinido" Foreground="Aqua"></CheckBox>


                                <Button x:ConnectionId='34' x:Name="IngresoEmpleado" Margin="10,20"  Height="40" Width="338" Content="Guardar" HorizontalAlignment="Center" Background="CornflowerBlue"                               />

                            </StackPanel>
                        </ScrollViewer>

                    </Grid>

                </Grid>




            </PivotItem>



            <PivotItem Header="Extras de empleado">


                <Grid>
                    <Grid.Background>
                        <ImageBrush
                    ImageSource="/Icons/reloj.png" Stretch="Uniform" Opacity="0.3">
                            <ImageBrush.Transform>
                                <CompositeTransform />
                            </ImageBrush.Transform>
                        </ImageBrush>
                    </Grid.Background>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Grid Grid.Column="0">

                        <StackPanel HorizontalAlignment="Center" Width="600" Height="120" VerticalAlignment="Top">
                            <TextBlock HorizontalAlignment="Center" Margin="5,5,0,5" FontSize="18">Seleccione el tipo de extra y el empleado a quien se aplicara</TextBlock>

                            <ComboBox x:ConnectionId='23' Margin="0,2" x:Name="Tipoextra"   Width="300" Height="40" PlaceholderText="Escoja el tipo de extra" HorizontalAlignment="Center"                                              >
                                <x:String>Horas Extras</x:String>
                                <x:String>Ingresos extras</x:String>
                                <x:String>Egresos Extras</x:String>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal" MaxWidth="500" HorizontalAlignment="Center">
                                <TextBlock x:ConnectionId='24' Name="probando" Margin="10,0" Text="Buscar Empleado" VerticalAlignment="Center"></TextBlock>
                                <TextBox x:ConnectionId='25' Name="Buscadorempleado" Margin="10,0" Width="250" />
                                <Button x:ConnectionId='26' Name="btnsearchempleados" Margin="5,0" Content="buscar"                                 ></Button>
                            </StackPanel>


                        </StackPanel>



                        <ListView x:ConnectionId='21' Name="listaempleados" Margin="10,125,10,0"                                       SelectionMode="Single" IsItemClickEnabled="True" Height="auto" VerticalAlignment="Top"  >
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel Orientation="Horizontal" Margin="25,0">
                                            <PersonPicture Height="60" Width="60" DisplayName="{Binding NmEmp}"></PersonPicture>
                                            <StackPanel Margin="10" Orientation="Vertical">
                                                <TextBlock Text="{Binding IDemp}"></TextBlock>
                                                <TextBlock Text="{Binding NmEmp}"></TextBlock>
                                                <TextBlock Text="{Binding PstEmp}"></TextBlock>
                                                <TextBlock Text="{Binding SalEmp}"></TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>


                        </ListView>





                    </Grid>

                    <Grid Grid.Column="1">
                        <ScrollViewer>
                            <Grid>


                                <StackPanel x:ConnectionId='4' Name="stackhx" Margin="89,90,0,139" Background="#CCF4F3F3" HorizontalAlignment="Left" Width="0" Height="400">

                                    <StackPanel.OpacityTransition>
                                        <ScalarTransition></ScalarTransition>
                                    </StackPanel.OpacityTransition>

                                    <TextBlock FontSize="20" Margin="10" HorizontalAlignment="Center">Ingreso de horas extras</TextBlock>
                                    <TextBlock Margin="0,0,0,20"></TextBlock>
                                    <TimePicker x:ConnectionId='17' Name="hx1" Margin="10" ClockIdentifier="24HourClock" Header="Desde las" MinuteIncrement="0" />
                                    <TimePicker x:ConnectionId='18' Name="hx2" Margin="10" ClockIdentifier="24HourClock" Header="Hasta las" MinuteIncrement="0" />

                                    <DatePicker x:ConnectionId='19' Name="hxfch" Margin="10" Header="Fecha"></DatePicker>

                                    <Button x:ConnectionId='20' Name="botonhx" Margin="10" HorizontalAlignment="Center"                       Background="CornflowerBlue">Ingresar Horas extras</Button>

                                </StackPanel>




                                <StackPanel x:ConnectionId='5' Name="stackin" Margin="89,90,0,139"  Background="#CCF4F3F3" HorizontalAlignment="Left" Width="0" Height="400">

                                    <StackPanel.OpacityTransition>
                                        <ScalarTransition></ScalarTransition>
                                    </StackPanel.OpacityTransition>

                                    <TextBlock FontSize="20" Margin="10" HorizontalAlignment="Center">Ingreso Extra</TextBlock>
                                    <ToggleSwitch x:ConnectionId='12' Name="diaextra" OnContent="Dia Extra" OffContent="Dia Extra" Margin="10" IsEnabled="False"                            />
                                    <TextBox x:ConnectionId='13' Name="ixdescripcion" Margin="10" PlaceholderText="Ingrese la descripccion del ingreso" Header="Descripcion del ingreso"></TextBox>
                                    <TextBox x:ConnectionId='14' Name="ixtotal" Margin="10" Header="Total efectivo" PlaceholderText="Ingrese el total a pagar"                             ></TextBox>
                                    <DatePicker x:ConnectionId='15' Name="ixfch" Margin="10" Header="Fecha"></DatePicker>

                                    <Button x:ConnectionId='16' Name="ixingreso" Margin="10" HorizontalAlignment="Center" Background="CornflowerBlue"                        >Ingresar Ingreso extras</Button>

                                </StackPanel>


                                <StackPanel x:ConnectionId='6' Name="stackeg" Margin="89,90,0,139"    Background="#CCF4F3F3" HorizontalAlignment="Left" Width="0" Height="400">


                                    <StackPanel.OpacityTransition>
                                        <ScalarTransition></ScalarTransition>
                                    </StackPanel.OpacityTransition>

                                    <TextBlock FontSize="20" Margin="10" HorizontalAlignment="Center">Egreso Extra</TextBlock>
                                    <ToggleSwitch x:ConnectionId='7' Name="diaperdido" OnContent="Dia perdido" OffContent="Dia perdido" Margin="10" IsEnabled="False"                             />
                                    <TextBox x:ConnectionId='8' Name="exdescripcion" Margin="10" PlaceholderText="Ingrese la descripccion del egreso" Header="Descripcion del egreso" ></TextBox>
                                    <TextBox x:ConnectionId='9' Name="extotal" Margin="10" Header="Total efectivo" PlaceholderText="Ingrese el total a pagar"                             ></TextBox>
                                    <DatePicker x:ConnectionId='10' Name="exfch" Margin="10" Header="Fecha"></DatePicker>

                                    <Button x:ConnectionId='11' Name="exingreso" Margin="10" HorizontalAlignment="Center" Background="CornflowerBlue"                        >Ingresar Egreso extras</Button>


                                </StackPanel>


                            </Grid>
                        </ScrollViewer>

                    </Grid>
                </Grid>


            </PivotItem>





        </Pivot>

    </Grid>
</Page>

